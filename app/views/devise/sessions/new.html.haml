.auth-panel
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.email_field :email, autofocus: true, placeholder: 'Your email', class: 'form-control input-lg'
    .form-group  
      = f.password_field :password, autocomplete: "off", placeholder: 'Your password', class: 'form-control input-lg'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", class: 'btn btn-lg btn-primary'
  = render "devise/shared/links"
