.auth-panel
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.email_field :email, autofocus: true, placeholder: 'Your email', class: 'form-control input-lg'
    .form-group
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", placeholder: 'Your password', class: 'form-control input-lg'
    .form-group
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Your confirmation password', class: 'form-control input-lg'
    .actions
      = f.submit "Sign up", class: 'btn btn-lg btn-primary'
  = render "devise/shared/links"
